{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES2017"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "rollup.config.ts", "jest.setup.ts"],
  "exclude": ["node_modules", "dist", "es", "lib"]
}
